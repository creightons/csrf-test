        meta(charset = 'utf-8')
    body
        h1 Page
        a(href = '/') index
        if token
            div I got a token
            div= token
        else
            div No token for me
        
        form(method = 'POST' action='/page')
            input(type='hidden' name='_csrf' value=token)
